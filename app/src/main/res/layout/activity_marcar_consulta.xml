<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarcarConsulta"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulta"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="100sp"
        android:layout_marginBottom="80sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:id="@+id/btnMarcarUrgencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40sp"
        android:layout_marginLeft="10sp"
        android:text="UrgÃªncia"/>

        <Button
            android:id="@+id/btnMarcarMaternidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40sp"
            android:layout_marginLeft="10sp"
            android:text="Maternidade"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMarcarClinica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40sp"
            android:layout_marginLeft="10sp"
            android:text="Clinica"/>

        <Button
            android:id="@+id/btnMarcarDentista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40sp"
            android:layout_marginLeft="10sp"
            android:text="Dentista"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMarcarCAPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="40sp"
            android:layout_marginLeft="10sp"
            android:text="CAPS"/>

    </LinearLayout>



</LinearLayout>