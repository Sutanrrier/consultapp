<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telaRemedios"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_consulta_logo"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="Logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESCOLHA UMA OPÇÃO"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <Button
            android:id="@+id/btnAutodeclaracao"
            android:text="AUTODECLARAÇÃO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="32dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnMedicacoesRecebidas"
            android:text="MEDICAÇÕES RECEBIDAS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="32dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnCadastrarMedicamento"
            android:text="CADASTRAR MEDICAMENTO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="32dp"/>

    </LinearLayout>
</LinearLayout>